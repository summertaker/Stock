<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".setting.WordCategoryActivity"
    tools:showIn="@layout/word_category_activity">

    <LinearLayout
        android:id="@+id/loContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 속보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/bl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alert"
                android:textColor="@color/ink"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <!-- 강조 -->
            <TextView
                android:id="@+id/tvBreakingInclude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/highlight"
                android:textColor="@color/ink" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc" />

            <!-- 제외 -->
            <TextView
                android:id="@+id/tvBreakingExclude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/exclude"
                android:textColor="@color/ink" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <!-- 네이버 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/bl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/naver"
                android:textColor="@color/ink"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <!-- 강조 -->
            <TextView
                android:id="@+id/tvNaverInclude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/highlight"
                android:textColor="@color/ink" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc" />

            <!-- 제외 -->
            <TextView
                android:id="@+id/tvNaverExclude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/exclude"
                android:textColor="@color/ink" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc" />

            <!-- 광고 -->
            <TextView
                android:id="@+id/tvNaverAd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/ad"
                android:textColor="@color/ink" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <!-- 다음 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/bl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daum"
                android:textColor="@color/ink"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <!-- 강조 -->
            <TextView
                android:id="@+id/tvDaumInclude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/highlight"
                android:textColor="@color/ink" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc" />

            <!-- 제외 -->
            <TextView
                android:id="@+id/tvDaumExclude"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/exclude"
                android:textColor="@color/ink" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc" />

            <!-- 광고 -->
            <TextView
                android:id="@+id/tvDaumAd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/ad"
                android:textColor="@color/ink" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>